<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_height="550dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/txtclose1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/toolbar"
        android:text="X"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:backgroundTint="@color/bgBottomNavigation"
        android:background="@drawable/cerclebackground"/>
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="312dp"
        android:layout_height="132dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/toolbar">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="152dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:text="Shazia Hassan"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="196dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:text="Simple Look 2-yrs Experience"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="202dp"
            android:layout_height="26dp"
            android:layout_marginBottom="4dp"
            android:text="Charges-5000"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="127dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="101dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="6dp"
            android:drawableRight="@drawable/star"
            android:text="Rating : 4.8"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Hours"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday - Thursday"
        android:drawablePadding="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"

        android:drawablePadding="10dp"
        android:text="10:00 am - 6 pm"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Closed"
        android:layout_marginLeft="20dp"

        android:drawablePadding="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    <TextView

        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday - Saturday"
        android:layout_marginLeft="50dp"

        android:drawablePadding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BS-Buisness and Accounting"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        />

</LinearLayout>
