<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Makeup"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="568dp"
        android:layout_margin="10dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="398dp"
            android:layout_height="150dp"
            android:backgroundTint="#FFEBF6"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:text="Saima Rasheed"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:focusable="auto"
                app:srcCompat="@drawable/beautician3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="224dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Bridal Makeup 2-yrs Experience"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="224dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="80dp"
                android:text="Charges-12000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/viewbtn"
                android:layout_width="145dp"
                android:layout_height="37dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="105dp"
                android:backgroundTint="#E11586"
                android:onClick="showPopup"
                android:text="View Details"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:cornerRadius="20dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFEBF6"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:text="Shazia Hassan"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="224dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Party Makeup 3-yrs Experience"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="224dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="80dp"
                android:text="Charges-7000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/viewbtn"
                android:layout_width="145dp"
                android:layout_height="37dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="105dp"
                android:backgroundTint="#E11586"
                android:onClick="showPopup"
                android:text="View Details"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:cornerRadius="20dp" />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFEBF6"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:text="Nasira Parveen"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="224dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Simple Look 2-yrs Experience"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="224dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="80dp"
                android:text="Charges-5000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/viewbtn"
                android:layout_width="145dp"
                android:layout_height="37dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="105dp"
                android:backgroundTint="#E11586"
                android:onClick="showPopup"
                android:text="View Details"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:cornerRadius="20dp" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="MAKEUP"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toEndOf="@+id/buttonbackmakeup"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonbackmakeup"
        android:layout_width="51dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"

        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#E11586"
        android:drawableLeft="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E11586"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>